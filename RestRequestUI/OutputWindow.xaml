<Window x:Class="RestRequestUI.OutputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestRequestUI"
        mc:Ignorable="d"
        Title="Status" Height="200" Width="500" ResizeMode="NoResize" ShowInTaskbar="False" WindowStyle="None" WindowStartupLocation="CenterScreen" Icon="favicon.ico">
    <Grid Margin="10" HorizontalAlignment="Left" VerticalAlignment="Center">
        <StackPanel>
            <Label Content="Output"/>
            <TextBox TextWrapping="Wrap" Name="outputBox" Width="480" Height="100" FontFamily="Consolas" IsReadOnly="True"/>
                <Button Name="exitButton" Content="Stop" Margin="0,5,0,0" HorizontalAlignment="Right" Width="50" Click="exitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

<Window x:Class="RestRequestUI.Editors.UpdateEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestRequestUI.Editors"
        mc:Ignorable="d"
        Title="Modify Update Request" Height="135" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow" ShowInTaskbar="False">
    <Grid>
        <StackPanel Margin="5">
            <StackPanel Orientation="Horizontal">
                <Label Content="Url:"/>
                <TextBox Name="urlBox" VerticalAlignment="Center" Width="230"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,25,20,0">
                <Button Name="resetButton" Width="100" Content="Reset" Click="resetButton_Click"/>
                <Button Name="okButton" Margin="60,0,0,0" Width="80" Content="Save" IsDefault="True" Click="okButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
